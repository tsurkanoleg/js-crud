{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}


	<main class="main">
		
			<form method="POST" action="/purchase-edit?id={{ID}}" class="form-card">
				{{> heading title="Інформація про замовлення"}}

		 
				<div class="id">ID: {{ID}} </div>
											
				<div class="col">
					<div class="row">
						<div class="col">
							{{> field-info label="Ім'я" name="firstname" }}
							<p class="name">{{data.firstname}}</p>
						</div>
						<div class="col">
							{{> field-info label="Прізвище" name="lastname"}}
							<p class="name">{{data.lastname}}</p>
						</div>
					</div>
					<div class="row">
						<div class="col">
							{{> field-info label="Телефон" name="phone"}}
							<p class="name">{{data.phone}}</p>
						</div>
						<div class="col">
							{{> field-info label="Пошта" name="email"}}
							<p class="name">{{data.email}}</p>
						</div>
					</div>
				</div>

			

				{{> button text="Зберегти зміни"}} 
			
		
	
	
		</form>
	</main>




