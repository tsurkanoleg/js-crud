{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}

<main>
	<section>
		<div class="form">
			<h1 class="form__title">Create NEW user</h1>
			<form method="POST" action="/user-create">
				<div class="form__content">
					<div class="form__field">
						<label for="email" class="form__label">Email adress:</label>
						<input type="email" name="email" class="form__input">
					</div>
					<div class="form__field">
						<label for="login" class="form__label">Login:</label>
						<input type="login" name="login" class="form__input">
					</div>
					<div class="form__field">
						<label for="password" class="form__label">Password:</label>
						<input type="password" name="password" class="form__input">
					</div>
					<button class="form__button">Create user</button>
				</div>
			</form>
		</div>
	</section>

	<section>
		<div class="form">
			<h1 class="form__title">User list</h1>
			<div class="user-list">
				{{#with data.users}} 
				{{#if isEmpty}}
					<mark>The user list is empty</mark>
				{{else}}
					<ul>
						{{#each list}}
							<li> {{email}} || {{login}} || {{id}} <a href="/user-delete?id={{id}}">(DELETE)</a> </li>
						{{/each}}
					</ul>
				{{/if}}
				{{/with}}
			</div>
		</div>
	</section>

	<section>
		<div class="form">
			<h1 class="form__title">Updates the user's mail</h1>
			<form method="POST" action="/user-update">
				<div class="form__content">
					<div class="form__field">
						<label for="id" class="form__label">ID</label>
						<input type="id" name="id" class="form__input">
					</div>
					<div class="form__field">
						<label for="email" class="form__label">NEW email adress:</label>
						<input type="email" name="email" class="form__input">
					</div>
					<div class="form__field">
						<label for="password" class="form__label">Password:</label>
						<input type="password" name="password" class="form__input">
					</div>
					<button class="form__button">Send</button>
				</div>
			</form>
		</div>
	</section>

	
</main>

