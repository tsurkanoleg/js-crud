{{! 
Це код container файлу для index сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
 }}


	<main class="main">

		<div class="header">Інформація про замовлення</div>
		
			<form method="POST" action="/purchase-edit?id={{data.id}}" class="form-card">
					
				{{#with data}}
		 		
						<div class="id">ID: {{id}} </div>

						{{> divider}}
												
						<div class="col">
							<div class="row">
								<div class="col">
									{{> field-info label="Ім'я" name="firstname" }}
									<p class="name">{{firstname}}</p>
								</div>
								<div class="col">
									{{> field-info label="Прізвище" name="lastname"}}
									<p class="name">{{lastname}}</p>
								</div>
							</div>
							<div class="row">
								<div class="col">
									{{> field-info label="Телефон" name="phone"}}
									<p class="name">{{phone}}</p>
								</div>
								<div class="col">
									{{> field-info label="Пошта" name="email"}}
									<p class="name">{{email}}</p>
								</div>
							</div>
						</div>

						{{> divider}}

						<div class="col1">
							{{> field-info label="Адреса доставки:" name="adress"}}
							<p class="name">{{delivery}}</p>
						</div>

						<div class="col1">
							{{> field-info label="Назва товару:" name="nameProduct"}}
							<p class="name">{{product}}</p>
						</div>

						{{> divider}}

						<div class="col">
							<div class="row">
								<div class="col">
									{{> field-info label="Вартість товарів:" name="promocode"}}
									<p class="name">{{productPrice}}</p>
								</div>
								<div class="col">
									{{> field-info label="Вартість доставки:" name="promocode"}}
									<p class="name">{{deliveryPrice}}</p>
								</div>
							</div>
							<div class="row">
								<div class="col">
									{{> field-info label="Сума до сплати:" name="promocode"}}
									<p class="name">{{totalPrice}}</p>
								</div>
								<div class="col">
									{{> field-info label="Нараховані бонуси:" name="promocode"}}
									<p class="name">{{bonus}}</p>
								</div>
							</div>
						</div>

						{{> divider}}				

						<strong class="form-card__total">
							Всього: {{totalPrice}} грн ({{bonus}} грн бонусів)
						</strong>


    		{{/with}}

				{{> button text="Змінити дані"}} 
	
			</form>
	</main>




